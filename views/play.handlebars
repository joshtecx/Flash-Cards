<nav class="navbar navbar-expand-sm fixed-top navbar-dark bg-dark">
    <a class="navbar-brand" href="/">flip'D over</a>
    <ul class="navbar-nav">
        <li class="nav-item">
            <a class="nav-link" href="/create">Create Deck</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/view">View Decks</a>
        </li>
        <li class="nav-item">
            <a class="nav-link" href="/play">Play Deck</a>
        </li>
    </ul>
</nav>
<div class="container">
    <div id="carouselExampleControls" class="carousel slide" data-ride="carousel">
        <div class="carousel-inner">
            {{#each Cards}}
            <div class="carousel-item active">
                <div class="card-flip">
                    <div class="flip">
                        <div class="front">
                            <div class="card text-center flash-card">
                                <div class="card-body flash-body">
                                    <h2 id="flash-title">{{this.question}}</h2>
                                    <p id="flash-text">{{this.hint}}</p>
                                </div>
                            </div>
                        </div>
                        <div class="back">
                            <div class="card text-center flash-card">
                                <div class="card-body flash-body">
                                    <h2 class="flash-title">{{this.answer}}</h2>
                                </div>
                            </div>
                        </div>

                    </div>
                </div>
            </div>
            {{/each}}
        </div>
        <a class="carousel-control-prev" href="#carouselExampleControls" role="button" data-slide="prev">
            <span class="carousel-control-prev-icon" aria-hidden="true"></span>
            <span class="sr-only">Previous</span>
        </a>
        <a class="carousel-control-next" href="#carouselExampleControls" role="button" data-slide="next">
            <span class="carousel-control-next-icon" aria-hidden="true"></span>
            <span class="sr-only">Next</span>
        </a>
    </div>
</div>